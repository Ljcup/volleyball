<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creatematch"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00008577"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Create Match">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Organizer : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="10dp">
        </TextView>

        <EditText
            android:id="@+id/etorgname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Team1 Name : "
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>

        <EditText
            android:id="@+id/etteam1name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Team1 Captain : "
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/etteam1cap"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textSize="20dp">
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Team2 Name : "
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/etteam2name"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textSize="20dp">
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Team2 Captain : "
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/etteam2cap"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textSize="20dp">
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Location : "
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/etlocation"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textSize="20dp">
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Date : "
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
        <EditText
            android:id="@+id/etdate"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textSize="20dp">
        </EditText>

    </LinearLayout>
    <Button
        android:id="@+id/btcreatematch"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Create Match"
        android:clickable="true"
        android:layout_gravity="center_horizontal">
    </Button>
</LinearLayout>