<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00008577"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Profile"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/profilebg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/profile">
        </ImageView>

        <TextView
            android:id="@+id/prnamedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/prdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOB"
        android:layout_below="@id/LL1"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prdob"
        android:layout_below="@+id/LL1"
        android:textSize="30dp"
        android:layout_marginLeft="53dp"
        android:id="@+id/prdobdot"
        android:layout_marginTop="25dp"
        android:text=":"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prdobdot"
        android:layout_below="@+id/LL1"
        android:textSize="15dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/prdobdata"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/premail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/prdob"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/premail"
        android:layout_below="@+id/prdobdot"
        android:textSize="30dp"
        android:layout_marginLeft="38dp"
        android:id="@+id/premaildot"
        android:layout_marginTop="15dp"
        android:text=":"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/premaildot"
        android:layout_below="@+id/prdobdata"
        android:textSize="15dp"
        android:layout_marginLeft="39dp"
        android:id="@+id/premaildata"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:id="@+id/prgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@id/premail"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prgender"
        android:layout_below="@+id/premaildot"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/prgenderdot"
        android:layout_marginTop="15dp"
        android:text=":"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/premaildot"
        android:layout_below="@+id/premaildata"
        android:textSize="15dp"
        android:layout_marginLeft="39dp"
        android:id="@+id/prgenderdata"
        android:layout_marginTop="35dp"
        />

    <Button
        android:id="@+id/prbtnsignout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prgender"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="Sign Out" />

</RelativeLayout>